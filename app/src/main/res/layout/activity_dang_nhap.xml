<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GUI.Login.DangNhapActivity">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/back_cat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationViewLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/cat" />

        <TextView
            android:id="@+id/textAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_semibold"
            android:text="NetTruyen"
            android:textAlignment="center"
            android:textColor="#FF3D00"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_semibold"
            android:text="Đăng Nhập :"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <EditText
            android:id="@+id/edit_taikhoan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:paddingEnd="20dp"
            android:background="@drawable/edit_text"
            android:backgroundTint="#E1E1E1"
            android:fontFamily="@font/baloo2_semibold"
            android:hint="Tài khoản"
            android:paddingStart="30dp"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/edit_mat_khau"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:paddingEnd="20dp"
            android:background="@drawable/edit_text"
            android:backgroundTint="#E1E1E1"
            android:fontFamily="@font/baloo2_semibold"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:paddingStart="30dp"
            android:textColor="@color/black" />
        <android.widget.Button
            android:id="@+id/button_dang_nhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/edit_text"
            android:backgroundTint="#FF3D00"
            android:fontFamily="@font/baloo2_semibold"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="30dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Bạn chưa có tài khoản ?"
                android:fontFamily="@font/baloo2_semibold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_dang_ky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FF1100"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/baloo2_semibold"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Đăng ký"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>